<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:clickable="true"
                                             android:focusable="true"
                                             android:background="?android:attr/selectableItemBackground"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="LSD"
            android:layout_width="344dp"
            android:layout_height="wrap_content" android:id="@+id/substance_item_name"
            android:textAppearance="@android:style/TextAppearance.Material"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/report_count_text" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="401dp"
            android:layout_height="wrap_content" android:id="@+id/substance_item_subtext" android:textSize="12sp"
            android:ellipsize="end" android:maxLines="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="aromaticum,ttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/substance_item_name" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/report_count_text"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/substance_item_subtext"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:textSize="12sp" android:textColor="?android:attr/colorActivatedHighlight"/>
</android.support.constraint.ConstraintLayout>